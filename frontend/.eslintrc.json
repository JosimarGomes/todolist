{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "paths": [
                    "frontend/src",
                    "src"
                ]
            }
        }
    }
}
